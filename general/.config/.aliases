nixs() {
	# run with --cache to refresh cache
	local cache_file=~/.cache/nix/nix-env-qaP

	if [[ "$1" =~ ^--?c(ache)?$ ]]; then
		mkdir -p $(dirname $cache_file)
		echo -n "Caching packages.."
		nix-env -qaP '*' >$cache_file
		echo " üèÅ"
	else
		grep -iE "$1" $cache_file
	fi
}

