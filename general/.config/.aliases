alias .d="cd ~/.dotfiles"
alias xmr="xmonad --recompile; xmonad --restart"
alias .dxm="cp ~/.config/xmonad/xmonad.hs ~/.dotfiles/xmonad/.config/xmonad/xmonad.hs; cp ~/.config/xmobar/xmobarrc ~/.dotfiles/xmonad/.config/xmobar/xmobarrc"
alias rex="xrandr --output DP-1 --primary --right-of eDP-1 --auto"
alias \?="noglob ?"

GO(){
    w3m "https://pkg.go.dev/search?q=$*"
}

RS(){
    # keybindings for w3m
    # https://cheatsheetfactory.geekyhacker.com/linux/w3m
    w3m "https://doc.rust-lang.org/std/all.html?search=$*"
}

alias \?r="noglob RS"
alias \?g="noglob GO"


# folders
alias play="cd ~/playground/"
