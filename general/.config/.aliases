#!/bin/bash

alias tmux="tmux -f ~/.config/tmux/tmux.conf"
alias v="nvim"
alias srcz=". ~/.config/zsh/.zshrc"
alias srca=". ~/.config/zsh/.aliases"
alias .s="nvim ~/.dotfiles/scripts/.local/share/scripts/"
alias xin='xinput map-to-output $(xinput | grep -i "pen pen"| cut -d = -f 2 | cut -d [ -f 1) DP-1'
alias r='ranger .'
alias xmr="xmonad --recompile; xmonad --restart"
alias .dxm="cp ~/.config/xmonad/xmonad.hs ~/.dotfiles/xmonad/.config/xmonad/xmonad.hs; cp ~/.config/xmobar/xmobarrc ~/.dotfiles/xmonad/.config/xmobar/xmobarrc"
alias rex="xrandr --output DP-1 --primary --right-of eDP-1 --auto"
alias \?="noglob ?"

GO(){
    w3m "https://pkg.go.dev/search?q=$*"
}

RS(){
    # keybindings for w3m
    # https://cheatsheetfactory.geekyhacker.com/linux/w3m
    w3m "https://doc.rust-lang.org/std/all.html?search=$*"
}

alias \?r="noglob RS"
alias \?g="noglob GO"


# folders
alias play="cd ~/playground/"
## projects
alias pro="cd ~/projects/main/"
alias pror="cd ~/projects/main/rust/"
alias prog="cd ~/projects/main/go/"
alias snip="cd ~/.config/nvim/my_snippets/"
alias .f="cd ~/.config/"

# git
alias gR="git reset"
